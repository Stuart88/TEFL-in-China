<Page x:Class="TEFL_App.Views.General.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TEFL_App.Views.General"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="LoginOptionBtnsStackPanel" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="managerLoginBtn" Click="LoginBtn_Click" Tag="Manager" Content="管理登录" />
            <Button x:Name="studentLoginBtn" Click="LoginBtn_Click" Tag="Student"  Content="学生登录" />
        </StackPanel>

        <Frame NavigationUIVisibility="Hidden" VerticalAlignment="Center" Grid.Row="1" x:Name="loginFrame" />
    </Grid>
</Page>