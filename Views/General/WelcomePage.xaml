                                <TableColumn/>
                            </Table.Columns>
                            <TableRowGroup>
                                <TableRow>
                                    <TableCell>
                                        <Paragraph Style="{StaticResource TableLabel}">
                                            课程首页
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph Style="{StaticResource TableText}">
