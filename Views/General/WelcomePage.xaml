                Grid.Column="0"
                Visibility="Collapsed"
                Margin="20" IsReadOnly="True"
                Padding="30"
                BorderThickness="0"
                Foreground="{StaticResource Black}"
                MaxWidth="500">


                    <FlowDocument>
                        <Paragraph FontSize="20" Foreground="{StaticResource Black}" FontWeight="Bold">
                            欢迎来到eChinaCareers TEFL认证课程
                            <LineBreak/>
