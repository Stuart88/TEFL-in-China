<Page x:Class="TEFL_App.Views.Management.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TEFL_App.Views.Management"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="welcomePane"
      Title="Welcome">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Frame>
            <Frame.Content>
                <StackPanel Orientation="Vertical" >
                    <Label Content="{Binding Path=PageText.WelcomeTitle, ElementName=welcomePane}"/>

                    <TextBlock Text="{Binding Path=PageText.WelcomeText, ElementName=welcomePane}"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame>
            <Frame.Content>
                <StackPanel Orientation="Vertical" >
                    <Label Content="{Binding Path=PageText.PleaseSetPassword, ElementName=welcomePane}"/>

                    <TextBlock Text="{Binding Path=PageText.PleaseSetPassword_Explanation, ElementName=welcomePane}"/>


                </StackPanel>
            </Frame.Content>
        </Frame>


    </StackPanel>
</Page>
